extends ../layout

block content
    h2.page-header 添加分类
    !=messages()

    if errors && errors.length
        div.errors
            each error in errors
                p.alert.alert-danger= error.msg

    form.vertical-form(method="post", action=action)
        div.form-group
            label(for="name") 标题
            input.form-control.input-lg(name="name", required="true", placeholder="请输入标题...", value=category.name)

        button.btn.btn-info(type="submit")= category.name ? "保存修改" : "添加分类"
